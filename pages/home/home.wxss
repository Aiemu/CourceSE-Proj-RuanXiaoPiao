/* pages/home/home.wxss */
.line{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 5rpx solid gray;
}
.img{
  width: 100rpx;
  height: 100rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;  
}

.inform{
  display: flex;
  justify-content: flex-start;
  align-items: stretch;
  border-bottom: 5rpx solid gray;
  padding-top: 40rpx;
  padding-bottom: 40rpx; 
}
.meta{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.logo{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}
.tag{
  padding-left: 20rpx;
  width: 70%;
  font-size: 30rpx;
  color: white;
  border-radius: 20rpx;
  background-color: gray;
}
