<import src="../../wxParse/wxParse.wxml" />

<view class="activity">  
    <image class="post" src="{{activityDetail.basicInfo.image}}"></image>
    <view class="meta">
        <text class="title">{{activityDetail.basicInfo.title}}</text>
        <view class="lastline">
            <!--TODO: 添加状态内容 -->
            <text wx:if="{{activityDetail.basicInfo.state == 0}}" class="state">售票中</text>
            <text wx:if="{{activityDetail.basicInfo.price}}">{{activityDetail.basicInfo.price}}元</text>
            <text class="hot">{{activityDetail.basicInfo.hot}}</text>
        </view>
    </view>
</view>
<view class="meta">
    <text class="date">{{activityDetail.basicInfo.date}}</text>
    <text class="location">{{activityDetail.basicInfo.location}}</text>
    <text class="sponsor">{{activityDetail.basicInfo.sponsor}}</text>
</view>
<view class="buttons">
    <van-button plain hairline type="primary">关注</van-button>
    <van-button plain hairline type="primary">分享</van-button>
</view>
<view class="activity-detail">
    <view class="tag">活动详情</view>
    <view class="content">
        <template is="wxParse" data="{{wxParseData:article.nodes}}" />
    </view>
</view>
<view class="buy-button">
    <van-button wx:if="{{activityDetail.basicInfo.state == 0}}" round type="info" size="large" color="#e74c3c">立即抢票</van-button>
    <van-button wx:else disabled round type="info" size="large" color="#e74c3c">立即抢票</van-button>
</view>